{
  "name": "complaint-management-system",
  "version": "1.0.0",
  "description": "DevOps Complaint Management System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:all": "jest --testPathPattern=tests --runInBand --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage:report": "jest --coverage --collectCoverageFrom='*.js' --collectCoverageFrom='!node_modules/**'",
    "coverage:open": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "docker:build": "docker build -t complaints-app:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "job:test": "node run-job.js test",
    "job:test:unit": "node run-job.js test:unit",
    "job:test:integration": "node run-job.js test:integration",
    "job:build": "node run-job.js build",
    "job:deploy": "node run-job.js deploy",
    "job:deploy:prod": "node run-job.js deploy --env production",
    "job:ci": "node run-job.js ci"
  },
  "keywords": [
    "complaint",
    "devops"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
